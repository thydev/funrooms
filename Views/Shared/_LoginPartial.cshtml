@using Microsoft.AspNetCore.Identity
@using SocialLogin.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Account/Login", new { area = "Identity" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav">
            <li class="nav-item nav-li"><a class="nav-link" asp-controller="Chat" asp-action="MainRoom" title="Chat Room">Chat Room!</a></li>
            <li class="nav-item nav-li"><a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a></li>
            <li class="nav-item nav-li"><button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button></li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item nav-li"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li class="nav-item nav-li"><a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}